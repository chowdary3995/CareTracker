<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calvinhobbes"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to Caretracker!!"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button android:id="@+id/trackerButton"
        android:layout_width="fill_parent"
        android:paddingTop="20dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Live Tracking"/>
    
     <Button android:id="@+id/setBoundary"
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Set Boundary"/>
     
     <Button android:id="@+id/getBoundary"
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Show current Boundary"/>
     
     <Button android:id="@+id/feedback"
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="Send Feedback"/>

</LinearLayout>